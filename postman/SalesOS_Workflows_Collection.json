            "url": {
              "raw": "{{base_url}}/rest/v1/salesos_workflow_queue?select=*&status=eq.processing&order=created_at.asc",
              "host": ["{{base_url}}"],
              "path": ["rest", "v1", "salesos_workflow_queue"],
              "query": [
                { "key": "select", "value": "*" },
                { "key": "status", "value": "eq.processing" },
                { "key": "order", "value": "created_at.asc" }
              ]
            }
          }
        },
        {
          "name": "Ver Itens com Erro",
          "request": {
            "method": "GET",
            "header": [
              { "key": "apikey", "value": "{{anon_key}}" },
              { "key": "Authorization", "value": "Bearer {{anon_key}}" }
            ],
            "url": {
              "raw": "{{base_url}}/rest/v1/salesos_workflow_queue?select=*&status=eq.failed&order=created_at.desc&limit=50",
              "host": ["{{base_url}}"],
              "path": ["rest", "v1", "salesos_workflow_queue"],
              "query": [
                { "key": "select", "value": "*" },
                { "key": "status", "value": "eq.failed" },
                { "key": "order", "value": "created_at.desc" },
                { "key": "limit", "value": "50" }
              ]
            }
          }
        },
        {
          "name": "Executar Worker (processar fila)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{base_url}}/functions/v1/workflow-worker",
              "host": ["{{base_url}}"],
              "path": ["functions", "v1", "workflow-worker"]
            }
          }
        }
      ]
    },
