            ],
            "url": {
              "raw": "{{base_url}}/rest/v1/salesos_workflow_queue?select=*&status=eq.pending&order=created_at.asc&limit=50",
              "host": ["{{base_url}}"],
              "path": ["rest", "v1", "salesos_workflow_queue"],
              "query": [
                { "key": "select", "value": "*" },
                { "key": "status", "value": "eq.pending" },
                { "key": "order", "value": "created_at.asc" },
                { "key": "limit", "value": "50" }
              ]
            }
          }
        },
        {
          "name": "Ver Fila Processando",
          "request": {
            "method": "GET",
            "header": [
              { "key": "apikey", "value": "{{anon_key}}" },
              { "key": "Authorization", "value": "Bearer {{anon_key}}" }
